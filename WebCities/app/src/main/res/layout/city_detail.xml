<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              tools:context=".ui.activity.CityListActivity" android:orientation="vertical">
    <TextView android:id="@+id/city_name_label"
              style="?android:attr/textAppearanceLarge"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp"
              android:text="@string/city_name_label"
              android:textStyle="bold"
              tools:context=".ui.fragment.CityDetailFragment"/>
    <TextView android:id="@+id/city_name"
              style="?android:attr/textAppearanceLarge"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp"
              android:textIsSelectable="true"
              tools:context=".ui.fragment.CityDetailFragment"/>
    <TextView android:id="@+id/city_country_label"
              style="?android:attr/textAppearanceLarge"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp"
              android:text="@string/city_country_label"
              android:textStyle="bold"
              tools:context=".ui.fragment.CityDetailFragment"/>
    <TextView android:id="@+id/city_country"
              style="?android:attr/textAppearanceLarge"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp"
              android:textIsSelectable="true"
              tools:context=".ui.fragment.CityDetailFragment"/>
</LinearLayout>