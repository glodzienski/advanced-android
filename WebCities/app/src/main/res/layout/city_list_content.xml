<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
        android:gravity="top"
        android:id="@+id/linearLayout"
        android:background="@drawable/back">
    <ImageView
            android:layout_width="82dp"
            android:layout_height="wrap_content" android:id="@+id/imageView"
            android:layout_weight="0" app:srcCompat="@mipmap/ic_launcher"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="235dp"
            android:layout_height="match_parent" android:layout_weight="0">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtNome"
                android:text="Cidade" android:textSize="20sp"
                android:textColor="#fff" android:textAlignment="viewStart"/>
        <TextView
                android:text="Pais"
                android:layout_width="match_parent"
                android:layout_height="43dp" android:id="@+id/txtPais" android:layout_weight="0"
                android:textSize="14sp" android:textColor="#f5f5f5"/>
    </LinearLayout>
</LinearLayout>
